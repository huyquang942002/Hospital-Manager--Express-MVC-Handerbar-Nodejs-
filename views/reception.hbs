<html>
  <head>
    <title>Hospital Manager</title>
    <!-- Thêm các liên kết đến tệp CSS và JavaScript của Bootstrap -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />

  </head>
  <body>

    <div class="container mt-5">
      <h1>Reception</h1>
      <div class="mt-3">
        <a href="/lobby" class="btn btn-primary mr-2">Lobby</a>
        <a href="/reception" class="btn btn-primary mr-2">Reception</a>
        <a href="/doctor" class="btn btn-primary mr-2">Doctor Room</a>
      </div>
    </div>

    <div class="mt-4">
      <h1 style="text-align: center;">Doctor Room</h1>
      <div class="row" id="doctors-render">
        {{#each doctorJson}}
          <div class="col-3 col-sm-3 mt-2">
            <ul class="list-group">
              <li class="list-group-item active">Bác sĩ {{this.name}}</li>
              <li class="list-group-item">Khoa phu san?</li>
              <li class="list-group-item">Current Patients: 1/3</li>
            </ul>
          </div>

        {{/each}}
      </div>
    </div>

    <hr>
    <h1 style="text-align: center;">List Patient</h1>

    <div class="container mt-5">

      <table class="table">
        <thead>
          <tr>
            <th scope="col">STT</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Disease</th>
            <th scope="col">Priority</th>
            <th scope="col">Expert</th>
            <th scope="col">Date</th>
            <th scope="col">Insurance</th>
          </tr>
        </thead>
        <tbody id="registered-patients">

          {{#each receptionJson}}
            <tr>
              <th>{{@index}}</th>
              <td>{{this.name}}</td>
              <td>{{this.age}}</td>
              <td>{{this.sick}}</td>
              <td>{{this.priority}}</td>
              <td>{{this.expert}}</td>
              <td>{{this.date}}</td>
              <td>{{this.insurance}}</td>
              <td>
                <a
                  href="/reception/update/{{@index}}"
                  class="btn btn-primary edit-btn"
                >Edit</a>
                <a
                  href="/reception/delete/{{@index}}"
                  class="btn btn-primary edit-btn"
                  onclick="return confirm('are you sure to remove patient')"
                >Remove</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>

    </div>

    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>

  </body>
</html>